@model WebShop.DataAccess.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="CreateUpdate">Create New Category</a>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.categories) {
        <tr>
            <td>@item.Name</td>
            <td>@item.DisplayOrder</td>
            <td>
                <a asp-action="CreateUpdate" asp-controller="Category" asp-route-id="@item.Id">Update Category</a>
                <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete Category</a>
            </td>
        </tr>
}
    </tbody>
</table>
